<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:text="AL ELIMINAR TU CUENTA:"
            android:textColor="@color/botonrojo"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="-Se eliminará tu cuenta de bikeapp"
            android:textColor="@color/list_item_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="-Se borrará tu historial de actividades"
            android:textColor="@color/list_item_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:text="Para borrar tu cuenta ingresa tu contraseña"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/pwddelete"
            android:layout_width="203dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingTop="20dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btndelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_red"
            android:text="Eliminar mi cuenta"
            android:textColor="@color/list_background"
            android:textColorHint="@color/botonrojo" />

    </LinearLayout>

</RelativeLayout>